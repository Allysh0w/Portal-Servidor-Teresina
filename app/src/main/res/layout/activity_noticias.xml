<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.prodater.portalservidor.portalservidor.NoticiasActivity"
    android:orientation="vertical"
    android:background="@drawable/fundo_portal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginBottom="@dimen/abc_floating_window_z"
        android:layout_marginLeft="@dimen/abc_floating_window_z"
        android:layout_marginRight="@dimen/abc_floating_window_z"
        android:layout_marginTop="@dimen/abc_floating_window_z"
        android:layout_gravity="center"
        android:gravity="center">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/noticias_pmt"
        />

        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Compartilhar"
            android:layout_gravity="right"
            android:id="@+id/compartilhar_botao"
            android:background="@drawable/sharebotao"/>

    </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@drawable/roundcornerwebview"
                android:layout_marginTop="10dp">

             <WebView
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_marginBottom="5dp"
                 android:layout_marginTop="5dp"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="5dp"
                 android:id="@+id/navegador_noticias">

             </WebView>
            </LinearLayout>

</LinearLayout>


