<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fundo_portal"
    android:id="@+id/principal_contracheque">



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/abc_floating_window_z"
            android:layout_marginLeft="@dimen/abc_floating_window_z"
            android:layout_marginRight="@dimen/abc_floating_window_z"
            android:layout_marginTop="@dimen/abc_floating_window_z"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contra_cheque_topo"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matrícula: "
                android:layout_gravity="center"
                android:textColor="@color/branco"/>

            <EditText
                android:background="@drawable/editbackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Informe sua matrícula"
                android:id="@+id/matricula_contracheque"
                android:inputType="number"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha:      "
                android:layout_gravity="center"
                android:textColor="@color/branco"/>


            <EditText
                android:background="@drawable/editbackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Digite sua senha"
                android:id="@+id/senha_contracheque"
                android:inputType="textPassword"
                android:singleLine="true" />
        </LinearLayout>
        <!-- -->

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano:          "
                android:layout_gravity="center"
                android:textColor="@color/branco"/>

            <Spinner android:id="@+id/SpinnerAno"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editbackground" />

        </LinearLayout>
        <!-- -->

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mês:          "
                android:layout_gravity="center"
                android:textColor="@color/branco"/>

            <Spinner android:id="@+id/SpinnerMes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editbackground"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp">


            <ImageButton
                android:background="@drawable/bt_pesquisar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:id="@+id/btn_pesquisar"
                android:layout_marginBottom="10dp"
                />

            <ImageButton
                android:background="@drawable/recuperar_senha"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/btn_limpar"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>